import numpy as np


def matrix_pow_eigen(A, n):
    #고유값 분해를 통한 행렬 거듭제곱 계산 함수

    # 고유값 분해
    eigvals, eigvecs = np.linalg.eig(A)

    # 고유값 거듭제곱
    eigvals_n = np.diag(eigvals ** n)

    # A^n = V * Lambda^n * V^(-1)
    A_n = np.dot(np.dot(eigvecs, eigvals_n), np.linalg.inv(eigvecs))

    return A_n


# 예제 테스트
A = np.array([[2, 1], [1, 3]])
result = matrix_pow_eigen(A, 5)
print(result)
